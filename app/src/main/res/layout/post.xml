<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:ignore="MissingDefaultResource"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="3dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_margin="10dp"
        android:background="#E9E9EA">
    </ImageView>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="242dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/posttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/postcategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="6pt"
                android:text="카테고리"></TextView>

            <TextView
                android:id="@+id/posttime"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="6pt"
                android:text="몇분전"></TextView>
        </LinearLayout>

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/postprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textColor="@color/black"
            android:textSize="8pt"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            android:layout_gravity="right"
            >

            <ImageButton
                android:id="@+id/interest_state"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_interest_state_0" />

            <TextView
                android:id="@+id/interext_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="숫자"
                android:layout_marginRight="15dp"
                ></TextView>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>